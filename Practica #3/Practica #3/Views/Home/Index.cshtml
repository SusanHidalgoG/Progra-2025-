@{
    ViewData["Title"] = "Home Page";
}

<section class="hero d-flex align-items-center">
    <div class="container hero-content text-center">
        <h1 class="display-4 fw-bold mb-4">Gestión de Pagos y Consultas</h1>
        <p class="lead">Sistema de administración</p>
    </div>
</section>

<section class="container my-5">
    <div class="row g-4 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card card-action card-consulta text-center p-4">
                <i class="fas fa-search card-icon"></i>
                <h3>Consulta</h3>
                <p class="text-muted">Accede a los registros y realiza búsquedas en nuestra base de datos.</p>
                <a asp-action="Consulta" asp-controller="Home" class="btn btn-primary btn-lg mt-3 px-4">
                    <i class="fas fa-arrow-right me-2"></i> Acceder
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card card-action card-registro text-center p-4">
                <i class="fas fa-user-edit card-icon"></i>
                <h3>Registro</h3>
                <p class="text-muted">Añade nuevos registros al sistema con nuestro formulario.</p>
                <a asp-action="Registro" asp-controller="Home" class="btn btn-success btn-lg mt-3 px-4">
                    <i class="fas fa-arrow-right me-2"></i> Acceder
                </a>
            </div>
        </div>
    </div>
</section>