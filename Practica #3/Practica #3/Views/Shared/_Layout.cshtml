<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Practica_3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Practica__3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnG6yZlFQ1tG+e6y0qTgZrX1m1m8z0y+2d8z4eQn2oQ8cH8+0mCqXb1J3v3+0s2y5J8Qf8bJYzV9s6l5Gq7rKQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Consulta","Compras")">
                <i class="fas fa-shield-alt me-2"></i>Sistema de Pagos
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <i class="fas fa-home me-1"></i> Inicio
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Consulta","Compras")">
                            <i class="fas fa-list me-1"></i> Consulta
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Registro","Abonos")">
                            <i class="fas fa-cash-register me-1"></i> Registro
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="py-5">
        <div class="container">
            <div class="row">

                <div class="col-lg-4 mb-4">
                    <h5><i class="fas fa-shield-alt me-2"></i>Sistema de Pagos</h5>
                    <p class="text-muted">Sistema para gestionar pagos, abonos y consultas.</p>
                </div>

                <div class="col-lg-4 mb-4">
                    <h5>Práctica #3</h5>
                    <p><i class="fas fa-users me-2"></i>Grupo #6</p>
                    <p><i class="fas fa-calendar-day me-2"></i>2025</p>
                </div>

            </div>

            <hr class="my-4 bg-light">
            <div class="text-center">
                <p class="mb-0">Grupo #6</p>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
