@model IEnumerable<Practica__3.Models.Compra>
@{
    var err = TempData["Error"] as string;
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-list me-2"></i> Consulta de Compras</h2>

    @if (!string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Descripción</th>
                        <th scope="col" class="text-end">Precio</th>
                        <th scope="col" class="text-end">Saldo</th>
                        <th scope="col">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id_Compra</td>
                            <td>@c.Descripcion</td>
                            <td class="text-end">@c.Precio.ToString("N2")</td>
                            <td class="text-end">@c.Saldo.ToString("N2")</td>
                            <td>
                                @if (c.Estado == "Pendiente")
                                {
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                }
                                else if (c.Estado == "Cancelado")
                                {
                                    <span class="badge bg-success">Cancelado</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@c.Estado</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
