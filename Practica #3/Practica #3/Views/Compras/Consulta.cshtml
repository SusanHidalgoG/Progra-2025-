@model IEnumerable<Practica__3.Models.Compra>
@{
    ViewData["Title"] = "Consulta de Compras";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-list me-2"></i> Consulta de Compras</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Saldo</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id_Compra</td>
                            <td>@c.Descripcion</td>
                            <td>@c.Precio.ToString("N2")</td>
                            <td>@c.Saldo.ToString("N2")</td>
                            <td>
                                @if (c.Estado == "Pendiente")
                                {
                                    <span class="badge bg-warning text-dark">@c.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@c.Estado</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No hay compras registradas.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
